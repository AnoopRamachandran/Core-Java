import java.io.*;

public class Without_Main {
	
	 static {
		 
		
		 InputStreamReader reader = new InputStreamReader(System.in);
		 BufferedReader Ageinpt1 = new BufferedReader(reader);
		 try
		 {
	      System.out.println("Please Enter Your age: ");
		  String Ageinpt = Ageinpt1.readLine();
		  int age = Integer.parseInt(Ageinpt);
		 
		 if(age >= 18)
		 {
			 System.out.println("You are eligible to vote");
		 }
		 
		 else
		 {
			 System.out.println("You are not eligible to vote");
		 }
		 
		 }
		 catch(IOException err)
		 {
			 System.out.println("Please give the age in numbers");
		 }
		 
		 catch(NumberFormatException err) {
             System.out.println("Error Converting Number!!!");
        }	
		// int votersAge = Ageinpt1;
		// CheckAge voterAge = new CheckAge();
		// voterAge.setAge(int Ageinpt1);
		 
		
		 
		}
	 
	 

	    public static void main(String args[]) {
	          // Empty main method
	    }

}

